datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product{
  id String @id @default(uuid())
  name String
  bauteil_obergruppe String
  bauteil_gruner String
  zustand String
  material String
  ref_gebauede_geschoss String
  breite Float
  hoehe Float
  tiefe Float
  flaeche Float
  masse Float
  anzahl Int
  image String
  featured Boolean
  price Int
  co2 Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  clerkId String
}